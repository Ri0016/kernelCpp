kernel_function <- function(dx, kernel, h){
  #// dx: x1 - x2
  #// kernel: norm, Epanechnikov, Quartic
  #// h: bandwidth
  switch(kernel,
         norm={
           P =  dnorm(dx/h,0,1,FALSE)/h
         },
         Epanechnikov={
           P = 3/4*(1-dx^2)*(abs(dx) <=1 )
         },
         Quartic={
           P = 15/16*(1-dx^2)^2*(abs(dx) <=1 )
         },
         stop("Not include this formal kernel function!")
  )
  return(P)
}
